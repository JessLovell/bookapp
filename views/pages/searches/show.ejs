<!DOCTYPE hmtl>
<html>
    <%- include('../../layout/head') %>
    <body>
        <%- include('../../layout/header') %>
        <h1>Search Results</h1>
        <ul>
            <% bookInfo.forEach(item => { %>
            <li class="book-item">
                <h2><%= item.title %></h2>
                <h2><%= item.author %></h2>
                <h3><%= item.isbn %></h3>
                <img src="<%= item.img_url %>" />
                <p><%= item.description %></p>

                <button class="select-button">Select This Book</button>
                <form class="hide-me" action="/books" method="post">
                    <input type="text" name="img_url" value="<%= item.img_url %>" required>
                    <input type="text" name="title" value="<%= item.title %>" required>
                    <input type="text" name="author" value="<%= item.author %>" required>
                    <input type="text" name="isbn" value="<%= item.isbn %>" required>
                    <input type="text" name="description" value="<%= item.description %>" required>
                    <input type="text" name="bookshelf" value="<% item.bookshelf %> required">
                    <button type="submit">Add this Book</button>
                </form>
                <% }) %>
            </li>
        </ul>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="/js/app.js"></script>
    </body>
</html>