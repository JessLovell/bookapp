<section class="book-container detail-view">
    <img src="<%= book.img_url %>">
    <h3><%= book.title %></h3>
    <span><%= book.author %></span>
    <p class="desc"><%= book.description %></p>
    <p class="isbn">
        <%= book.isbn %>
        <% if (book.bookshelf) { %>
            &mdash; 
            Bookshelf: <%= book.bookshelf %>
       <% } %>
    </p>
</section>